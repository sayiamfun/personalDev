<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.warm.system.mapper.PersonalNoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.warm.system.entity.PersonalNo">
        <id column="id" property="id" />
        <result column="wx_id" property="wxId" />
        <result column="wx_name" property="wxName" />
        <result column="qr_code" property="qrCode" />
        <result column="nickname" property="nickname" />
        <result column="equipment_id" property="equipmentId" />
        <result column="waiting_pass_num" property="waitingPassNum" />
        <result column="friends_num" property="friendsNum" />
        <result column="equipment_status" property="equipmentStatus" />
        <result column="sales_group" property="salesGroup" />
        <result column="personal_no_category" property="personalNoCategory" />
        <result column="head_portrait_url" property="headPortraitUrl" />
        <result column="create_time" property="createTime" />
        <result column="super_id" property="superId" />
        <result column="remarks" property="remarks" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <insert id="add" parameterType="com.warm.system.entity.PersonalNo" useGeneratedKeys="true" keyProperty="entity.id">
        insert into ${entity.db}
          (id,wx_id,wx_name,qr_code,nickname,equipment_id,waiting_pass_num,friends_num,equipment_status,sales_group,personal_no_category,head_portrait_url,create_time,super_id,remarks)
        values
          (#{entity.id},#{entity.wxId},#{entity.wxName},#{entity.qrCode},#{entity.nickname},#{entity.equipmentId},#{entity.waitingPassNum},#{entity.friendsNum},#{entity.equipmentStatus},#{entity.salesGroup},#{entity.personalNoCategory},#{entity.headPortraitUrl},#{entity.createTime},#{entity.superId},#{entity.remarks})
    </insert>

    <update id="updateOne" parameterType="com.warm.system.entity.PersonalNo" useGeneratedKeys="true" keyProperty="entity.id">
        UPDATE ${entity.db}
        <set>
            <if test="entity.wxId!=null">
                wx_id = #{entity.wxId},
            </if>
            <if test="entity.wxName!=null">
                wx_name = #{entity.wxName},
            </if>
            <if test="entity.qrCode!=null">
                qr_code = #{entity.qrCode},
            </if>
            <if test="entity.nickname!=null">
                nickname = #{entity.nickname},
            </if>
            <if test="entity.equipmentId!=null">
                equipment_id = #{entity.equipmentId},
            </if>
            <if test="entity.waitingPassNum!=null">
                waiting_pass_num = #{entity.waitingPassNum},
            </if>
            <if test="entity.friendsNum!=null">
                friends_num = #{entity.friendsNum},
            </if>
            <if test="entity.equipmentStatus!=null">
                equipment_status = #{entity.equipmentStatus},
            </if>
            <if test="entity.salesGroup!=null">
                sales_group = #{entity.salesGroup},
            </if>
            <if test="entity.personalNoCategory!=null">
                personal_no_category = #{entity.personalNoCategory},
            </if>
            <if test="entity.headPortraitUrl!=null">
                head_portrait_url = #{entity.headPortraitUrl},
            </if>
            <if test="entity.superId!=null">
                super_id = #{entity.superId},
            </if>
            <if test="entity.createTime!=null">
                create_time = #{entity.createTime},
            </if>
            <if test="entity.remarks!=null">
                remarks = #{entity.remarks},
            </if>
            <if test="entity.deleted!=null">
                deleted = #{entity.deleted},
            </if>
        </set>
        where id = #{entity.id}
    </update>

    <delete id="delete" parameterType="java.lang.String">
        ${sql}
    </delete>

    <select id="list" resultMap="BaseResultMap" parameterType="java.lang.String">
        ${sql}
    </select>

    <select id="listString" resultType="java.lang.String" parameterType="java.lang.String">
        ${sql}
    </select>

    <select id="getOne" resultMap="BaseResultMap" parameterType="java.lang.String">
        ${sql}
    </select>

    <select id="getCount" resultType="java.lang.Long" parameterType="java.lang.String">
        ${sql}
    </select>

</mapper>
