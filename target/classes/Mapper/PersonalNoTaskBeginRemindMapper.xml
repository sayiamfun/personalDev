<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.warm.system.mapper.PersonalNoTaskBeginRemindMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.warm.system.entity.PersonalNoTaskBeginRemind">
        <id column="id" property="id" />
        <result column="personal_no_task_id" property="personalNoTaskId" />
        <result column="content_type" property="contentType" />
        <result column="content" property="content" />
        <result column="super_id" property="superId" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <insert id="add" parameterType="com.warm.system.entity.PersonalNoTaskBeginRemind" useGeneratedKeys="true" keyProperty="entity.id">
        insert into ${entity.db}
          (id,personal_no_task_id,content_type,content,super_id,deleted)
        values
          (#{entity.id},#{entity.personalNoTaskId},#{entity.contentType},#{entity.content},#{entity.superId},#{entity.deleted})
    </insert>

    <update id="updateOne" parameterType="com.warm.system.entity.PersonalNoTaskBeginRemind" useGeneratedKeys="true" keyProperty="entity.id">
        UPDATE ${entity.db}
        <set>
            <if test="entity.wxId!=null">
                personal_no_task_id = #{entity.personalNoTaskId},
            </if>
            <if test="entity.contentType!=null">
                content_type = #{entity.contentType},
            </if>
            <if test="entity.contentType!=null">
                content = #{entity.content},
            </if>
            <if test="entity.superId!=null">
                super_id = #{entity.superId},
            </if>
            <if test="entity.deleted!=null">
                deleted = #{entity.deleted},
            </if>
        </set>
        where id = #{entity.id}
    </update>

</mapper>
